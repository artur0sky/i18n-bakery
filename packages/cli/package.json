{
    "name": "@i18n-bakery/cli",
    "version": "1.0.7",
    "description": "The Sous-Chef. Runs the kitchen floor, automating repetitive tasks, organizing extraction pipelines, and ensuring commands are executed flawlessly.",
    "main": "dist/index.js",
    "bin": {
        "i18n-bakery": "./bin/i18n-bakery.js"
    },
    "files": [
        "dist",
        "bin"
    ],
    "publishConfig": {
        "access": "public"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "dev": "tsup src/index.ts --format cjs,esm --watch --dts",
        "test": "vitest run"
    },
    "keywords": [
        "i18n",
        "cli",
        "extraction",
        "automation",
        "tooling",
        "bakery",
        "typescript",
        "command-line"
    ],
    "author": "Arturo SÃ¡enz",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/artur0sky/i18n-bakery.git"
    },
    "bugs": {
        "url": "https://github.com/artur0sky/i18n-bakery/issues"
    },
    "homepage": "https://github.com/artur0sky/i18n-bakery#readme",
    "dependencies": {
        "@babel/parser": "7.23.6",
        "@babel/traverse": "7.23.6",
        "@babel/types": "7.23.6",
        "@i18n-bakery/baker": "workspace:*",
        "@i18n-bakery/core": "workspace:*",
        "cac": "6.7.14",
        "chalk": "4.1.2",
        "fs-extra": "11.2.0",
        "glob": "10.3.10"
    },
    "devDependencies": {
        "@types/babel__traverse": "7.20.4",
        "@types/fs-extra": "11.0.4",
        "@types/glob": "8.1.0",
        "@types/node": "20.10.6",
        "tsup": "8.0.1",
        "typescript": "5.3.3",
        "vitest": "1.1.0"
    }
}