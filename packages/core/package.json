{
  "name": "@i18n-bakery/core",
  "version": "0.9.2",
  "description": "The essential ingredients for type-safe internationalization. Mixes perfectly with any JavaScript environment.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "translation",
    "typescript",
    "type-safe",
    "bakery",
    "core"
  ],
  "author": "Arturo SÃ¡enz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artur0sky/i18n-bakery.git"
  },
  "bugs": {
    "url": "https://github.com/artur0sky/i18n-bakery/issues"
  },
  "homepage": "https://github.com/artur0sky/i18n-bakery#readme",
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@types/node": "24.10.1",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  }
}