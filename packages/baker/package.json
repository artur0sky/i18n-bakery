        "@i18n-bakery/core": "workspace:*",
        "chalk": "5.6.2",
        "crypto-js": "4.2.0",
        "fs-extra": "11.3.2",
        "glob": "13.0.0"
    },
    "devDependencies": {
        "@types/babel__traverse": "7.20.4",
        "@types/fs-extra": "11.0.4",
